<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/ic_login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFEB3B"
        android:gravity="center"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/profile_user_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_profile_user"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="61dp" />


        <TextView
            android:id="@+id/profile_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="이름"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="298dp" />

        <TextView
            android:id="@+id/profile_text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="이메일"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="229dp" />

        <LinearLayout
            android:id="@+id/layout_birth"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_birth"
                style="@style/tv_birth"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:width="30dp"
                android:text="생일"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="229dp" />

            <TextView
                android:id="@+id/profile_text_birth"
                style="@style/tv_birth"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:width="100dp"
                android:text="생일"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="229dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_height"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_height"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="키"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="229dp" />

            <EditText
                android:id="@+id/profile_text_height"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="키"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/text_height3"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cm"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="229dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_weight"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_weight"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="몸무게"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="229dp" />

            <EditText
                android:id="@+id/profile_text_weight"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="몸무게"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/text_weight2"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kg"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="229dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bmr"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_bmr"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="BMR"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="229dp" />

            <TextView
                android:id="@+id/profile_text_bmr"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="BMR"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="229dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/round_save"
            android:text="save" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/round_logout"
            android:text="log out" />

        <Button
            android:id="@+id/btn_signout"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_signout"
            android:text="sign out" />

    </LinearLayout>

</FrameLayout>